<!--pages/docdashboard/docconsult.wxml-->
<i-notice-bar>
  请就您的健康问题向专家咨询
</i-notice-bar>
<view class="i-sticky-demo-des">
  您好，这里是来自 【{{clinicname}}】 的 【{{docname}}】 医生，大医精诚，为您服务！
</view>

<i-row>
  <i-input title="您的姓名" type="textarea" bind:blur="inputPatNameEvent" mode="wrapped" maxlength="20" placeholder="请填写您的姓名" />
  <i-input title="您的手机" type="textarea" bind:blur="inputPatMobileEvent" mode="wrapped" maxlength="20" placeholder="请填写您的手机号" />
  <i-panel title="您的性别">
  <text>您的性别</text>
    <i-radio-group current="{{currentsex}}" bindchange="handlePatSexChange">
      <i-radio wx:for="{{patsex}}" position="{{positionsex}}" wx:key="{{item.id}}" value="{{item.name}}">
      </i-radio>
    </i-radio-group>
  </i-panel>
  <i-panel title="您的年龄">
  <text>您的年龄</text>
    <view style="padding: 16px">
      <i-input-number value="{{ patage }}" min="6" max="100" bindchange="handlePatAgeChange" />
    </view>
  </i-panel>
  <i-input title="您的问题" type="textarea" bind:blur="inputConsultEvent" mode="wrapped" maxlength="300" placeholder="请填写您想咨询的问题" />
</i-row>
<i-row>
  <i-icon type="camera" size="56" color="#80848f" />
  <text>上传图片（相关诊断报告或者影像）</text>
</i-row>
<i-row>
  <view class="question-images clearFloat">
    <block wx:for="{{images}}" wx:key="*this">
      <view class="q-image-wrap">
        <!-- 图片缩略图  -->
        <image class="q-image" src="{{item}}" mode="aspectFill" data-idx="{{index}}" bindtap="handleImagePreview"></image>
        <!-- 移除图片的按钮  -->
        <view class="q-image-remover" data-idx="{{index}}" bindtap="removeImage">
          <i-icon type="delete_fill" size="28" color="#FFFAFA" />
        </view>
      </view>
    </block>
    <view class='uploadImgBtn' bindtap="chooseImage" wx:if="{{images.length < 3}}">
      <i-icon type="add" size="56" color="#80848f" />
    </view>
  </view>
</i-row>
<i-row>
  <view>
    <i-button type="success" bind:click="submitConsultInfo" size="large">提交</i-button>
  </view>
</i-row>

<i-modal visible="{{ visibleDlg }}" bind:ok="handleDlgClose" bind:cancel="handleDlgClose">
  <view>请您补充{{hintDlginfo}}</view>
</i-modal>