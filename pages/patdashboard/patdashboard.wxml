<!--pages/patdashboard/patdashboard.wxml-->
<wxs src="../../utils/subutils.wxs" module="tools" />

<i-notice-bar>
  我的咨询页面
</i-notice-bar>
<view class="i-sticky-demo-des">
  查看下面我的咨询请求以及医生的回复
</view>

<i-cell-group>
  <block wx:for="{{consults}}" wx:key="*this">
    <i-cell title="{{tools.sub(item.desc,0,6)}}" value="{{tools.sub(item.created_time,0,19)}}" is-link url="/pages/consult/consult?consultid={{item.pk}}&&patid={{item.patient}}">
    <i-icon slot="icon" type="activity" size="28" color="#80848f" />
    </i-cell>
  </block>
</i-cell-group>